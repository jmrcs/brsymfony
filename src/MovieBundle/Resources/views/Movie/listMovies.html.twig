    <table border="1" style="padding: 5px;">
        <tr>
            <td><b>ID</b></td>
            <td><b>Title</b></td>
            <td><b>Description</b></td>
            <td><b>IMDB Link</b></td>
            <td><b>Youtube Link</b></td>
            <td><b>RATING</b></td>
            <td><b>Director</b></td>
            <td><b>Producer</b></td>
            <td><b>Actors</b></td>
            <td colspan="3" style="text-align: center;"><b>Actions</b></td>
        </tr>
    {% for movie in allMovies %}
        <tr>
            <td>{{ movie.id }}</td>
            <td>{{ movie.title }}</td>
            <td style="width: 400px;">{{ movie.description }}</td>
            <td><a href="{{ movie.imdbLink }}" target="_blank">{{ movie.imdbLink }}</a></td>
            <td><a href="{{ movie.youtubeLink }}" target="_blank">{{ movie.youtubeLink }}</a></td>
            <td>{{ movie.rating }}</td>
            <td>{{ movie.director.name }}</td>
            <td>{{ movie.producer.name }}</td>
            <td>{# movie.actors.name #}</td>
            <td><a href="{{ path('movie_edit', {'id': movie.id}) }}" target="_self">Edit</a></td>
            <td><a href="{{ path('movie_delete',{'id': movie.id}) }}" target="_self">Delete</a></td>
            <td><a href="{{ path('movie_view',{'id': movie.id}) }}" target="_self">View</a></td>
        </tr>
    {% endfor %}
    </table>
    <ul>
        <li><a href="{{ path('movie_create') }}" target="_self">Create Movie</a></li>
        <li><a href="{{ path('default_homepage') }}" target="_self">Home</a></li>
    </ul>
{% endblock %}